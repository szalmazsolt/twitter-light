<%- include('../partials/header') %>

<div class="container">
  <div class="row">
    <div class="col-6">
      <form action="/tweets/<%= tweet.id %>?_method=PATCH" method="POST">
        <!-- <input class="form-control" type="text" name="text" id="text" value="<%= tweet.text %>"> -->

        <textarea class="form-control" name="text" rows="3" autofocus>
          <%= typeof tweet !== 'undefined' ? tweet.text : '' %>
        </textarea>
        <div class="text-danger mt-2"><%= typeof error !== 'undefined' ? error : '' %></div>
        <button class="btn btn-primary mt-3">Update</button>
      </form>
    </div>
  </div>
</div>



<%- include('../partials/footer') %>
